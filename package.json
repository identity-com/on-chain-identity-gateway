{
  "name": "ociv-gatekeeper-client",
  "version": "1.0.0",
  "description": "Client for interacting with OCIV gatekeepers",
  "main": "dist/index",
  "types": "dist/index",
  "repository": "git@github.com:identity-com/ociv-gatekeeper-client.git",
  "author": "Kevin Colgan <kevin@civic.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn run clean && yarn run compile",
    "clean": "rimraf -rf ./dist",
    "compile": "tsc -p tsconfig.build.json",
    "prepublishOnly": "yarn run build",
    "test:unit": "STAGE=${STAGE:-dev} FORCE_COLOR=1 nyc --reporter=lcov ts-mocha --timeout 20000 --paths --exit -R mocha-circleci-reporter 'test/unit/**/*.ts'",
    "test": "yarn test:unit && yarn coverage",
    "coverage": "FORCE_COLOR=1 nyc report --reporter=text && nyc check-coverage"
  },
  "dependencies": {
    "@solana/web3.js": "^1.5.0",
    "@types/chai": "^4.2.16",
    "@types/sinon": "^10.0.0",
    "axios": "^0.21.1",
    "ts-mocha": "^8.0.0",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@types/expect": "^24.3.0",
    "@types/mocha": "^8.2.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^8.3.2",
    "mocha-circleci-reporter": "^0.0.3",
    "nyc": "^15.1.0",
    "rimraf": "~3.0.2",
    "sinon": "^9.2.3",
    "sinon-chai": "^3.5.0",
    "ts-node": "^9.0.0"
  }
}
