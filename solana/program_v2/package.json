{
  "name": "@identity.com/solana-gateway-ts-v2",
  "private": true,
  "workspaces": [
    "packages/client/cli",
    "packages/client/core",
    "packages/client/idl",
    "packages/tests"
  ],
  "version": "0.8.2",
  "description": "Typescript adapters for interacting with Solana gateway program",
  "main": "dist/index",
  "types": "dist/index",
  "repository": "git@github.com:identity-com/on-chain-identity-gateway.git",
  "homepage": "https://www.identity.com",
  "author": "Martin Riedel <martin@identity.org>",
  "license": "MIT",
  "scripts": {
    "create-fixtures": "anchor run createTestFixtureAccount",
    "cargo:lint": "cargo fmt --manifest-path Cargo.toml --all",
    "cargo:fix": "cargo fmt --manifest-path Cargo.toml --all -- --check",
    "build": "anchor build && yarn workspace @identity.com/gateway_v2-idl build && yarn workspace @identity.com/gateway_v2-client build && yarn workspace @identity.com/gateway-v2-cli build",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:all": "yarn lint && yarn cargo:lint",
    "test": "yarn workspace @identity.com/gateway_v2-program-tests build && anchor test",
    "start-validator": "solana-test-validator --bpf-program FSgDgZoNxiUarRWJYrMDWcsZycNyEXaME5i3ZXPnhrWe ./target/deploy/gateway_v2.so --reset",
    "prepare": "cd ../../ && husky install solana/program_v2/.husky"
  },
  "devDependencies": {
    "@project-serum/anchor-cli": "https://github.com/kklas/anchor-nightly/releases/download/anchor-cli-latest/anchor-cli-0.25.0-7eb8ca8.tgz",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^7.0.4",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "ts-mocha": "^10.0.0",
    "typescript": "^4.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
