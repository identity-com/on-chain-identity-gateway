{
  "name": "@identity.com/solana-gateway-ts-v2",
  "private": true,
  "workspaces": [
    "packages/client/cli",
    "packages/client/core",
    "packages/client/idl",
    "tests"
  ],
  "version": "0.8.2",
  "description": "Typescript adapters for interacting with Solana gateway program",
  "main": "dist/index",
  "types": "dist/index",
  "repository": "git@github.com:identity-com/on-chain-identity-gateway.git",
  "homepage": "https://www.identity.com",
  "author": "Kevin Colgan <kevin@civic.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rimraf -rf ./dist && yarn workspace @identity.com/gateway_v2-idl clean && yarn workspace @identity.com/gateway_v2-client clean && yarn workspace @identity.com/gateway-v2-cli clean",
    "compile": "yarn workspace @identity.com/gateway_v2-idl compile && yarn workspace @identity.com/gateway_v2-client compile && yarn workspace @identity.com/gateway-v2-cli compile && tsc -p tsconfig.json",
    "test": "STAGE=${STAGE:-dev} FORCE_COLOR=1 nyc --reporter=text ts-mocha --paths 'tests/**/*.ts'",
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "lint:all": "yarn lint && yarn lint:cargo",
    "lint:cargo": "cargo fmt --manifest-path Cargo.toml --all -- --check",
    "lint:cargo:fix": "cargo fmt --manifest-path Cargo.toml --all",
    "create-fixtures": "anchor run createTestFixtureAccount",
    "start-validator": "solana-test-validator --bpf-program FSgDgZoNxiUarRWJYrMDWcsZycNyEXaME5i3ZXPnhrWe ./target/deploy/gateway_v2.so --reset",
    "prepare": "cd ../../ && husky install solana/program_v2/.husky"
  },
  "dependencies": {
    "@project-serum/anchor": "^0.25.0",
    "@solana/web3.js": "^1.41.3",
    "@identity.com/gateway_v2-idl": "^1.0.0",
    "@identity.com/gateway_v2-client": "^1.0.0"
  },
  "devDependencies": {
    "@project-serum/anchor-cli": "^0.25.0",
    "@types/chai": "^4.3.3",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2",
    "rimraf": "~3.0.2",
    "ts-mocha": "^8.0.0",
    "typescript": "^4.2.4",
    "husky": "^7.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
